name: {{projectName}}
options:
  bundleIdPrefix: "your.reverse.domain.{{projectName}}"
targets:
  {{projectName}}:
    type: application
    platform: iOS
    deploymentTarget: "10.0"
    sources: [{{projectName}}]
    settings:
      configs:
        debug:
          CUSTOM_BUILD_SETTING: my_debug_value
        release:
          CUSTOM_BUILD_SETTING: my_release_value
