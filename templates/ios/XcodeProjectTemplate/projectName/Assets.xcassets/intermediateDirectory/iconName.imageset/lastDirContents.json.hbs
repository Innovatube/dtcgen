{
  "images": [
  {{#forEach images}}
    {{#if ../isSingleScale }}
    {
      "idiom": "universal",
      "filename": "{{fileName}}"
    }{{#unless isLast}},{{/unless}}
    {{else}}
    {
      "idiom": "universal",
      "filename": "{{fileName}}",
      "scale" : "{{scale}}"
    }{{#unless isLast}},{{/unless}}
    {{/if}}
  {{/forEach}}
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  },
  "properties": {
    {{#if isSingleScale}}
    "preserves-vector-representation": true,
    {{/if}}
    "auto-scaling": "auto"
  }
}
